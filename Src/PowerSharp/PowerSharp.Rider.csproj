<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <RootNamespace>PowerSharp</RootNamespace>
    <AssemblyName>PowerSharp</AssemblyName>
    <IsPackable>False</IsPackable>
    <DefineConstants>$(DefineConstants);RIDER</DefineConstants>
    <LangVersion>latest</LangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>bin.Rider\$(Configuration)\</OutputPath>
    <Configurations>Debug;Release;Release and Deployment</Configurations>
    
    <PluginName>ResharperPlugin.PowerSharp.2023.3.0</PluginName>
  </PropertyGroup>

  <ItemGroup>
    <!--clean 'obj' folder-->
    <Compile Remove="obj\**\*" />
    <None Remove="obj\**\*" />
    <EmbeddedResource Remove="obj\**\*" />
    <Content Remove="obj\**\*" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Rider.SDK" Version="2023.3.0" />
  </ItemGroup>

  <Target Name="BuildPluginDirectoryDeploymentTask" AfterTargets="PostBuildEvent" Condition=" '$(Configuration)|$(Platform)' == 'Release and Deployment|AnyCPU' ">
    <ItemGroup>
      <MetadataDir Include="$(SolutionDir)Metadata.Rider\**\*.*" />
    </ItemGroup>
    
    <Copy SourceFiles="@(MetadataDir)" DestinationFolder="$(OutputPath)\$(PluginName)\$(PluginName)\lib\$(PluginName)\META-INF\%(RecursiveDir)" />
    <Copy SourceFiles="$(OutputPath)$(AssemblyName).dll" DestinationFolder="$(OutputPath)\$(PluginName)\$(PluginName)\dotnet\" />
    <Copy SourceFiles="$(OutputPath)$(AssemblyName).pdb" DestinationFolder="$(OutputPath)\$(PluginName)\$(PluginName)\dotnet\" />
    <ZipDirectory SourceDirectory="$(OutputPath)\$(PluginName)\$(PluginName)\lib\$(PluginName)\" DestinationFile="$(OutputPath)\$(PluginName)\$(PluginName)\lib\$(PluginName).jar" Overwrite="True" />
    <RemoveDir Directories="$(OutputPath)\$(PluginName)\$(PluginName)\lib\$(PluginName)\" />
    <ZipDirectory SourceDirectory="$(OutputPath)\$(PluginName)\" DestinationFile="$(OutputPath)\$(PluginName).zip" Overwrite="True" />
    <RemoveDir Directories="$(OutputPath)\$(PluginName)\" />
    <Copy SourceFiles="$(OutputPath)\$(PluginName).zip" DestinationFolder="$(SolutionDir)\Plugins" OverwriteReadOnlyFiles="True" />
  </Target>

</Project>
